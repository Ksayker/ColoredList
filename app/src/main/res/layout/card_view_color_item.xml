<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_cv_color_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_main_color_card_top_bottom_margin"
        android:layout_marginBottom="@dimen/activity_main_color_card_top_bottom_margin"
        card_view:cardCornerRadius="12dp"
        >

        <TextView
            android:id="@+id/card_view_tv_color_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/activity_main_color_text_left_right_margin"
            android:textSize="@dimen/activity_main_color_name_text_size"
            />
    </android.support.v7.widget.CardView>
</LinearLayout>